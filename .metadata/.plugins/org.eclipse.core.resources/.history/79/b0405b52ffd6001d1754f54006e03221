#include "Counter.h"
#include "stm32f4xx_hal.h"

void HAL_TIM_PeriodElapsedCallback(TIM_HandleTypeDef *htim)
{
	// Interrupci칩n cada segundo mediante TIM3.


	if(FlagTimer1s == 1)
		CuentasSolenoide++;

	if(MSegs == 2)
	{
		HAL_GPIO_TogglePin(GPIOA, GPIO_PIN_1);
		MSegs = 0;
	}
	else
		MSegs++;


}

void TIM3_IRQHandler(void)
{
	HAL_TIM_IRQHandler(&HTim3);
}



void TIM3Init(void)
{
	//Habilitar se침ales de reloj
	__HAL_RCC_TIM3_CLK_ENABLE();


	//Configuraci칩n de alto nivel
	HTim3.Instance = TIM3;
	HTim3.Init.Prescaler = 9999; // Ck_CNT = Ck_PSC / (1 + Preescaler)
	HTim3.Init.Period = 4999; // Freq_int = Ck_CNT / (1 + Period)

	//Habilitar la interrupci칩n
	HAL_NVIC_SetPriority(TIM3_IRQn, 0, 10);
	HAL_NVIC_EnableIRQ(TIM3_IRQn);

	HAL_TIM_Base_Init(&HTim3);
	HAL_TIM_Base_Start_IT(&HTim3);


}

